<div class="login_error">
  <%= flash[:notice] %>
</div>
<%# fixed //  use password_field to hide password %>

<div class="login">
  <h1>Login</h1>

  <%= form_tag('/login') do %>

    <div class="field">
    <%= label_tag :email %><br>
    <%= text_field_tag :email %><br>
    </div>

    <div class="field">
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
    </div>

    <div class="actions">
    <%= submit_tag "Login" %>
    </div>

  <% end %>

</div>
